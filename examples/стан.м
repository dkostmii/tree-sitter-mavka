структура Стан
  дані словник
  слухачі список
кінець

дія Стан.виконати_отримання_елемента(ключ)
  я.дані[ключ]
кінець

дія Стан.виконати_присвоєння_елемента(ключ, значення)
  я.дані[ключ] = значення

  перебрати я.слухачі як слухач
    слухач(я)
  кінець
кінець

дія Стан.виконати_створення(дані словник або пусто,
                            слухачі список або пусто)
  якщо дані є пусто
    дані = ()
  кінець
  якщо слухачі є пусто
    слухачі = []
  кінець

  я.дані = дані
  я.слухачі = слухачі
кінець

дія Стан.змінити(ключ текст, значення щось)
  я[ключ] = значення
кінець

дія Стан.слухати(слухач Дія)
  я.слухачі.додати(слухач)
кінець

дати Стан
